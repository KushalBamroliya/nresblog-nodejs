<div id="admin-content">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="admin-heading"><i class="fa fa-cog"></i> Settings</h1>
      </div>
      <div class="col-md-6 mx-auto">
        <div class="card">
          <h5 class="card-header">Settings</h5>
          <div class="card-body">
            <form
              action="/admin/settings"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="mb-3">
                <label for="article_title" class="form-label"
                  >Website Title</label
                >
                <% if(!setting.websiteTitle || setting.websiteTitle.trim() ===
                ''){ %>
                <input
                  type="text"
                  name="websiteTitle"
                  class="form-control"
                  autocomplete="off"
                  required=""
                />
                <%}else{ %>
                <input
                  type="text"
                  name="websiteTitle"
                  value="<%= setting.websiteTitle %>"
                  class="form-control"
                  autocomplete="off"
                  required=""
                />
                <%} %>
              </div>
              <div class="mb-3">
                <label for="website_logo" class="form-label">Upload Logo</label>
                <br />
                <% if (setting && setting.websiteLogo &&
                setting.websiteLogo.trim() !== '') { %>
                <img
                  src="/uploads/<%= setting.websiteLogo %>"
                  alt="<%= setting.websiteTitle %>"
                  class="m-3 w-25 border-2 rounded-1 border-secondary-subtle"
                />
                <% } %>
                <input type="file" name="websiteLogo" class="form-control" />
              </div>
              <div class="mb-3">
                <label for="footer_description" class="form-label"
                  >Footer Description</label
                >
                <% if(!setting.footerDesctioption ||
                setting.footerDesctioption.trim() === ''){ %>
                <input
                  type="text"
                  name="footerDesctioption"
                  class="form-control"
                  autocomplete="off"
                  required=""
                />
                <%}else{ %>
                <input
                  type="text"
                  name="footerDesctioption"
                  value="<%= setting.footerDesctioption %>"
                  class="form-control"
                  autocomplete="off"
                  required=""
                />
                <%} %>
              </div>

              <input
                type="submit"
                name="submit"
                class="btn btn-primary"
                value="Save"
                required=""
              />
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
